@model List<application.Domain.Enitites.EavesSize>

@{int i = 0; }
@foreach (var size in Model)
{
    if (i == 0)
    {
        <div class='col-xs-3 col-md-2'>
            <input type="radio" name="size" id="size-@size.pipesSizeEntity.Id" value="@size.pipesSizeEntity.Id" checked/>
            <label for="size-@size.pipesSizeEntity.Id">
                <span>@size.pipesSizeEntity.Size</span>
            </label>
        </div>
    }
    else
    {
        <div class='col-xs-3 col-md-2'>
            <input type="radio" name="size" id="size-@size.pipesSizeEntity.Id" value="@size.pipesSizeEntity.Id" />
            <label for="size-@size.pipesSizeEntity.Id">
                <span>@size.pipesSizeEntity.Size</span>
            </label>
        </div>
    }
    i++;

}