@model IEnumerable<application.Domain.Enitites.Rolcollection_colors>

@{
    Layout = null;
}

@{int i = 0;}

@foreach (var color in Model)
{
    if (i == 0)
    {
        <div class='col-xs-2 col-md-1'>
            <input type='radio' id='@color.ID' data-count='@(i+1)' name='rolColors' checked />
            <label for='@color.ID' class='imageWraper color'>
                <img class='shadow' src='~/Content/img/RolCollections/@color.collectionEntity.Id/small-@(i+1).jpg' />
            </label>
        </div>
    }
    else
    {
        <div class='col-xs-2 col-md-1'>
            <input type='radio' id='@color.ID' data-count='@(i+1)' name='rolColors' />
            <label for='@color.ID' class='imageWraper color'>
               <img class='shadow' src='~/Content/img/RolCollections/@color.collectionEntity.Id/small-@(i+1).jpg' />
           </label>
        </div>
    }

    i++;
 }
