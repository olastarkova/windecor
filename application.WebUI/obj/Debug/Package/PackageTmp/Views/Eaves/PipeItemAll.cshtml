@model List<application.Domain.Enitites.EavesCollectionType>

@{ 
    int i = 0;
}
@foreach (var type in Model)
{
    if (i == 0)
    {
        <div class='col-xs-6 col-sm-4 col-md-3 type'>
            <input type="radio" name="type" id="type-@type.eavesTypesEntity.Id" value="@type.eavesTypesEntity.Id" checked/>
            <label for="type-@type.eavesTypesEntity.Id">
                <span>@type.eavesTypesEntity.Type</span>
            </label>
        </div>
    }
    else
    {
        <div class='col-xs-6 col-sm-4 col-md-3 type'>
            <input type="radio" name="type" id="type-@type.eavesTypesEntity.Id" value="@type.eavesTypesEntity.Id" />
            <label for="type-@type.eavesTypesEntity.Id">
                <span>@type.eavesTypesEntity.Type</span>
            </label>
        </div>
    }

    i++;
}
