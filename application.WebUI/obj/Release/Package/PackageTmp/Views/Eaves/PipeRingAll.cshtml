@model List<application.Domain.Enitites.EavesCollectionRing>


@{var i = 0; }
@foreach (var ring in Model)
{
    if (i == 0)
    {
        <div class='col-xs-6 col-md-3 rings'>
            <input type='radio' id='ring-@ring.ringsEntity.Id' value="@ring.ringsEntity.Id" name='rings' checked />
            <label for='ring-@ring.ringsEntity.Id' class='imageWraper ring'>
                <img src='~/Content/img/karnizy/kolca/@(ring.ringsEntity.Id).jpg' />
            </label>
        </div>
    }
    else
    {
        <div class='col-xs-6 col-md-3 rings'>
            <input type='radio' id='ring-@ring.ringsEntity.Id' value="@ring.ringsEntity.Id" name='rings' />
            <label for='ring-@ring.ringsEntity.Id' class='imageWraper ring'>
                <img src='~/Content/img/karnizy/kolca/@(ring.ringsEntity.Id).jpg' />
            </label>
        </div>
    }
    i++;
}